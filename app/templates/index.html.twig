<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CS Dashboard</title>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>

    <link rel="stylesheet" href="{{ asset('bootstrap.css') }}">
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body ng-app="myApp" ng-controller="myCtrl">
    <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">CS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Index
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row mt-2">
            <div class="col-3">
                <div class="card border-primary mb-3" style="max-width: 20rem;">
                    <div class="card-body">
                        <h4 class="card-title">Dernier enregistrement</h4>
                        <p class="card-text">[[ data.last ]]</p>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card border-primary mb-3" style="max-width: 20rem;">
                    <div class="card-body">
                        <h4 class="card-title">Nombre enregistrement</h4>
                        <p class="card-text">[[ data.count ]]</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <h3>5 derniers enregistrements</h3>

                <a href="{{ path('export') }}">
                <button type="button" class="btn btn-primary">Télécharger les données</button>
                </a>

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Piquet</th>
                        <th scope="col">Données</th>
                        <th scope="col">Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="e in data.data">
                        <th scope="row">[[ e.node ]]</th>
                        <td>
                            Température de l'air : <strong>[[ e.temp ]]&deg; Celsius</strong>
                            <br>
                            Humidité de l'air : <strong>[[ e.hum_air ]]%</strong>
                        </td>
                        <td>[[ e.date ]]</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col lg-4">
                <div id="map" class="justify-content-center align-self-center"></div>
            </div>
        </div>
    </div>
</body>
</html>